{
  "manifest_version": "2",
  "task_list": [
    {
      "name": "Convert Olympus ScanR Plate to OME-Zarr",
      "category": "Conversion",
      "modality": "HCS",
      "tags": [
        "Olympus",
        "ScanR",
        "Plate converter"
      ],
      "executable_non_parallel": "olympus_scanr/convert_scanr_init_task.py",
      "executable_parallel": "olympus_scanr/convert_scanr_compute_task.py",
      "meta_non_parallel": {
        "cpus_per_task": 1,
        "mem": 4000
      },
      "meta_parallel": {
        "cpus_per_task": 1,
        "mem": 12000
      },
      "args_schema_non_parallel": {
        "$defs": {
          "AcquisitionInputModel": {
            "description": "Acquisition metadata.",
            "properties": {
              "path": {
                "title": "Path",
                "type": "string"
              },
              "acquisition_id": {
                "minimum": 0,
                "title": "Acquisition Id",
                "type": "integer"
              }
            },
            "required": [
              "path",
              "acquisition_id"
            ],
            "title": "AcquisitionInputModel",
            "type": "object"
          },
          "AdvancedOptions": {
            "description": "Advanced options for the conversion.",
            "properties": {
              "tiling_mode": {
                "default": "auto",
                "enum": [
                  "auto",
                  "grid",
                  "free",
                  "none"
                ],
                "title": "Tiling Mode",
                "type": "string"
              },
              "swap_xy": {
                "default": false,
                "title": "Swap Xy",
                "type": "boolean"
              },
              "invert_x": {
                "default": false,
                "title": "Invert X",
                "type": "boolean"
              },
              "invert_y": {
                "default": false,
                "title": "Invert Y",
                "type": "boolean"
              }
            },
            "title": "AdvancedOptions",
            "type": "object"
          }
        },
        "additionalProperties": false,
        "properties": {
          "zarr_urls": {
            "items": {
              "type": "string"
            },
            "title": "Zarr Urls",
            "type": "array",
            "description": "List of Zarr URLs."
          },
          "zarr_dir": {
            "title": "Zarr Dir",
            "type": "string",
            "description": "Directory to store the Zarr files."
          },
          "list_acq": {
            "items": {
              "$ref": "#/$defs/AcquisitionInputModel"
            },
            "title": "List Acq",
            "type": "array",
            "description": "List of acquisitions to convert."
          },
          "plate_name": {
            "title": "Plate Name",
            "type": "string",
            "description": "Name of the plate (e.g. experiment_2.zarr)."
          },
          "overwrite": {
            "default": false,
            "title": "Overwrite",
            "type": "boolean",
            "description": "Overwrite existing Zarr files."
          },
          "advanced_options": {
            "$ref": "#/$defs/AdvancedOptions",
            "title": "Advanced Options",
            "description": "Advanced options for the conversion."
          }
        },
        "required": [
          "zarr_urls",
          "zarr_dir",
          "list_acq"
        ],
        "type": "object",
        "title": "ConvertScanrInitTask"
      },
      "args_schema_parallel": {
        "$defs": {
          "AcquisitionInputModel": {
            "description": "Acquisition metadata.",
            "properties": {
              "path": {
                "title": "Path",
                "type": "string"
              },
              "acquisition_id": {
                "minimum": 0,
                "title": "Acquisition Id",
                "type": "integer"
              }
            },
            "required": [
              "path",
              "acquisition_id"
            ],
            "title": "AcquisitionInputModel",
            "type": "object"
          },
          "AdvancedOptions": {
            "description": "Advanced options for the conversion.",
            "properties": {
              "tiling_mode": {
                "default": "auto",
                "enum": [
                  "auto",
                  "grid",
                  "free",
                  "none"
                ],
                "title": "Tiling Mode",
                "type": "string"
              },
              "swap_xy": {
                "default": false,
                "title": "Swap Xy",
                "type": "boolean"
              },
              "invert_x": {
                "default": false,
                "title": "Invert X",
                "type": "boolean"
              },
              "invert_y": {
                "default": false,
                "title": "Invert Y",
                "type": "boolean"
              }
            },
            "title": "AdvancedOptions",
            "type": "object"
          },
          "ConvertScanrInitArgs": {
            "description": "Arguments for the compute task.",
            "properties": {
              "acquision": {
                "$ref": "#/$defs/AcquisitionInputModel",
                "title": "Acquision"
              },
              "plate_name": {
                "title": "Plate Name",
                "type": "string"
              },
              "tiled_image_id": {
                "title": "Tiled Image Id",
                "type": "string"
              },
              "advanced_options": {
                "$ref": "#/$defs/AdvancedOptions",
                "title": "Advanced_Options"
              }
            },
            "required": [
              "acquision",
              "plate_name",
              "tiled_image_id"
            ],
            "title": "ConvertScanrInitArgs",
            "type": "object"
          }
        },
        "additionalProperties": false,
        "properties": {
          "zarr_url": {
            "title": "Zarr Url",
            "type": "string",
            "description": "URL to the OME-Zarr file."
          },
          "init_args": {
            "$ref": "#/$defs/ConvertScanrInitArgs",
            "title": "Init Args",
            "description": "Arguments for the initialization task."
          }
        },
        "required": [
          "zarr_url",
          "init_args"
        ],
        "type": "object",
        "title": "ConvertScanrComputeTask"
      },
      "docs_info": "## convert_scanr_init_task\nInitialize the task to convert a ScanR dataset to OME-Zarr.\n## convert_scanr_compute_task\nInitialize the task to convert a LIF plate to OME-Zarr.\n"
    }
  ],
  "has_args_schemas": true,
  "args_schema_version": "pydantic_v2",
  "authors": "Lorenzo Cerrone"
}
